    <view class="py50 row-end">
      <view class="avatar-sm bg-grey mr30"></view>
    </view>
    <view class="fbody mb20">Hello User</view>
    <view class="ftheader">Find your space</view>
    <view class="w100 bg-white py20 radius50 my50">
      <view class="mx20 flex items-center">
        <image src="/images/icons/spotlight.svg" class="search-image"></image>
        <view class="ml20">
          <input placeholder="Search for a space"/>
        </view>
      </view>
    </view>
    <view class="choices flex">
      <view class="fbody">Popular</view>
      <view class="mx60 fbody">Top Spaces</view>
    </view>
  </view>
  <tabbar/>
</view>
