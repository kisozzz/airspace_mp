<!--pages/components/card.wxml-->
<view class="card w90 pa20 mauto rounded bg-white shadow">
  <view class="card-img mauto w100 h100 bg-grey rounded ofh">
    <image class="h100 w100 bg-grey" src="{{booking.space.image_urls[0]}}" mode="aspectFill"></image>
  </view>

  <view class="ml30 relative flex column justify-between">
    <view class="flex column">
      <view class="w100 row-between">
        <view class="f30">{{booking.space.title}}</view>
        <!-- <view>stars stars</view> -->
        <l-rate score="{{info.rating}}" size="22" l-class="" active-color="#E9C501" inActive-color="#F3ECC6"/>
      </view>
      <view class="f24 mt20 opacity7">{{booking.space.city}}</view>
    </view>

    <view class="flex">
      <view class="f24 opacity7">{{booking.space.category}}</view>
      <view class="f24 ml20 opacity7">{{booking.space.price}}¥</view>
    </view>
    <view class="flex absolute b0 r0">
      <view bindtap="editBooking" class="red-text">Edit</view>
      <view bindtap="deleteBooking" class="red-text ml20">Cancel</view>
    </view>
  </view>
</view>

<l-arc-popup show="{{showPopup}}" max-height="650" min-height="200">
  <view style="height: 580rpx;">
<!-- form -->
  <view class="container-form pa30">
    <view class="title-form pb20">Book Space</view>
    <l-form name="booking_form" l-form-btn-class="l-form-btn-class" bind:linsubmit="submit">
        <l-form-item label="Start Date" name="start-date" class="label">
            <!-- <l-calendar show="{{ true }}" type="range" color="#f60"/> -->
            <l-input id="start-date" value="{{booking.start_date}}" hide-label show-row="{{false}}"/>
        </l-form-item>
        <l-form-item label="End Date" name="end-date" class="label">
            <!-- <l-calendar show="{{ true }}" type="range" color="#f60"/> -->
            <l-input id="end-date" value="{{booking.end_date}}" hide-label show-row="{{false}}"/>
        </l-form-item>

        <l-form-item label="Number of People" name="num" class="label">
            <l-input id="num" value="{{booking_form.num}}" hide-label show-row="{{false}}"/>
        </l-form-item>

        <l-form-item label="Additional Info" name="info" class="label">
            <l-input id="info" value="{{booking.additional_info}}" hide-label show-row="{{false}}"/>
        </l-form-item>

        <btn bindtap="createBooking" color="red" text="Submit" class="pa20"/>
    </l-form>
  </view>
  </view>
</l-arc-popup>


