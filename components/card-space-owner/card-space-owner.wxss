/* pages/components/card.wxss */
@import '/stylesheets/index';

.card {
  display: grid;
  grid-template-columns: 1fr 3fr;
  min-height: 180rpx;
}

.red-text {
  color: #FF7162;
}

.shadow {
  --tw-shadow: 0 2rpx 6rpx 0 rgba(0, 0, 0, 0.1), 0 2rpx 4rpx 0 rgba(0, 0, 0, 0.06);
box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000), var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow);
}